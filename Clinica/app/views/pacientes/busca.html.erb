<div class="container">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Cpf</th>
        <th>Nome mae</th>
      </tr>
    </thead>    
    <tbody>
      <% @pacientes.each do |paciente| %>
        <tr>
          <td><%= paciente.nome %></td>
          <td><%= paciente.cpf %></td>
          <td><%= paciente.nome_mae %></td>
          <td><%= link_to 'Mostrar Informações do Paciente', paciente, class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

